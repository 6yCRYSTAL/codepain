<table class="pen-list">
  <thead class="pen-list-title">
    <tr>
      <th scope="row">Title</th>
      <th scope="row"></th>
      <th scope="row">Created</th>
      <th scope="row">Last Updated</th>
      <th scope="row">Stats</th>
    </tr>
  </thead>
  <tbody class="pen-list-content">
    <% pens.each do |pen| %>
      <tr scope="col">
        <th class="title-wrap">
          <%= link_to pen.title, edit_pen_path(pen, username: current_user.username) %>
        </th>
        <td class="modal-wrap">
          <%# modal %>
          <button class="modal-btn" id="modal-btn">
            <i class="fas fa-expand-arrows-alt"></i>
          </button>
          <div id="modal" class="modal" data-url="<%= pen.random_url %>">
            <div class="modal-content">
              <a href="#" id="username">
                <%= current_user.username %>
              </a>
                <%= pen.title %>
                <%= pen.html %>
                <%= pen.css %>
                <%= pen.js %>
                <h3>Comment</h3>

                <%= form_for(@comment, url: create_comment_path(username: current_user.username, random_url:
                pen.random_url )) do |form| %>
                <div>
                <%= form.text_area :content, placeholder: "placeholder text from show.html.erb" %>
                </div>
                <%= form.submit %>
                <% end %>

                <div id="comment_area">
                <%= pen.comments_count> 1 ? "#{pen.comments_count} COMMENTS" : "#{pen.comments_count} COMMENT" %>
                <% pen.comments.each do |comment| %>
                <section id="">
                <%= "#{current_user.display_name} (@#{current_user.username})" %>
                <%= comment.content %>
                <%= time_ago_in_words(comment.created_at) + ' ago' %>
                <%= link_to "Edit" , comment_path(comment), method: "put" %>
                <%= link_to "Delete" , comment_path(comment), method: "delete" , data:
                {confirm: "Delete Confirmation\nThis will permanently delete this Comment." } %>
                </section>
                <% end %>
              </div>
        
            </div>
          </div>
        </td>
        <td><%= pen.created_at.to_date.to_formatted_s(:long) %></td>
        <td><%= pen.updated_at.to_date.to_formatted_s(:long) %></td>
        <td class="stats">
          <div class="hearts">
            <i class="fas fa-heart"></i>
            0
          </div>
          <div class="comments">
            <i class="fas fa-comment"></i>
            0
          </div>
          <div class="eye">
            <i class="fas fa-eye"></i>
            <%= pen.edit_view_count %>
          </div>
        </td>
        <td class="more">
          <div class="more-icon">
            <svg viewBox="0 0 29 7" width="28" title="more">
              <circle cx="3.5" cy="3.5" r="3.5"></circle>
              <circle cx="14.5" cy="3.5" r="3.5"></circle>
              <circle cx="25.5" cy="3.5" r="3.5"></circle>
            </svg>
          </div>
        </td>
        <td><%= link_to 'show', pen_path(pen, username:current_user.username)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="next-prev-btn">
    <button class="prev-btn">
      <span class="arrow-left"><i class="fas fa-chevron-right"></i></span>
      <span>Prev</span>
    </button>
  <button class="next-btn">
    <span>Next</span>
    <i class="fas fa-chevron-right"></i>
  </button>

</div>