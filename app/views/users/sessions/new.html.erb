<%= notice %><%= alert %>
<div class="login-container">
  <h1 class="login-header">Log In!</h2>
  <div class="login-flex-grid">
    
    <div class="login-email-left">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "Username or Email", class: "login-field-title" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password, class: "login-field-title" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <a href="#" class="password-reset">Forgot Password?</a>

      <h2 class="password-reset-header">Reset Your Password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name),    html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email, "Username Or Email", class: "login-field-title" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com" %>
        </div>
        <div class="actions">
          <%= f.submit "Send Password Reset Email" %>
        </div>
      <% end %>
    </div>
    
    <div class="login-divider">
      <div class="bar bar-top"></div>
      <span class="login-or">OR</span>
      <div class="bar bar-bottom"></div>
    </div>
  
    <div class="login-3party-right">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to omniauth_authorize_path(resource_name, provider), class: "button #{provider}-button button-3party" do %>
          <%= "<i class='fab fa-#{provider}'></i>".html_safe %>
          <%= "Log In with #{OmniAuth::Utils.camelize(provider)}" %>
          <br />
          <% end %>
        <% end %>
      <% end %>
    </div>
    
  </div>

  <div class="sign-up-subbutton">
    Need an account? <%= link_to "Sign up now!", new_user_registration_path, class: 'sign-up-link' %> 
  </div>
</div>


