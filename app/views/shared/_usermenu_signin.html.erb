<section class="search-userMenu-container">
  <div class="search-userMenu">
    <%= link_to root_path, class: 'burger-logo' do%>
      <img src="/images/logo-crystal-white.svg" alt="logo" />
    <% end %>
    <div class="burger-menu"
         data-burger-target="burger"
         data-action="click->burger#openSidebar">
      <button>
        <span></span>
        <div class="fas fa-chevron-down"></div>
      </button>
    </div>
    <%= form_tag search_all_users_pens_path, method: 'get', class: 'search-box' do %>
      <label>
        <div class="fas fa-search"></div>
        <%= text_field_tag :q, params[:q],
                               placeholder: 'Search CodePain...',
                               class: 'search-text' %>
      </label>
    <% end %>

    <%= render 'shared/user_menu_box' %>
  </div>
</section>