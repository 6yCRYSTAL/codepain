<header class="main-sidebar">
  <div class="sidebar-logo">
    <a href="#">
      <img src="/images/logo-white.svg" alt="codepain-logo">
    </a>
  </div>
  <div class="sidebar-toggle-btn">
    <button>
      <span></span>
      <div class="fas fa-chevron-left"></div>
    </button>
    <div class="sidebar-line"></div>
  </div>
  <% if current_user %>
    <div class="sidebar-content">
      <div class="sidebar-item">
        <p class="sidebar-title">CREATE</p>
        <div class="sidebar-item-line"></div>
        <%= link_to new_pen_path,class: 'create-link' do %>
          <svg viewBox="0 0 20 20" width="20" height="20">
          <path
          d="M0 9.002C0 8.45.455 8 .992 8h18.016c.548 0 .992.456.992 1.002v9.996c0 .553-.455 1.002-.992 1.002H.992C.444 20 0 19.544 0 18.998V9.002zm0-8C0 .45.451 0 .99 0h4.02A.99.99 0 016 1.003v4.994C6 6.551 5.549 7 5.01 7H.99A.99.99 0 010 5.997V1.003zm7 0C7 .45 7.451 0 7.99 0h4.02A.99.99 0 0113 1.003v4.994C13 6.551 12.549 7 12.01 7H7.99A.99.99 0 017 5.997V1.003zm7 0C14 .45 14.451 0 14.99 0h4.02A.99.99 0 0120 1.003v4.994C20 6.551 19.549 7 19.01 7h-4.02A.99.99 0 0114 5.997V1.003z">
          </path>
          </svg>
          <span>Pen</span>
        <% end %>
        <%= link_to new_pen_path,class: 'create-link' do %>
          <svg viewBox="0 0 20 20" width="20" height="20">
            <path
              d="M7 .995C7 .445 7.447 0 7.999 0H19c.552 0 .999.456.999.995v8.01c0 .55-.447.995-.999.995H8C7.447 10 7 9.544 7 9.005V.995zm0 11.003c0-.551.447-.998.999-.998H19c.552 0 .999.446.999.998v7.004c0 .551-.447.998-.999.998H8A.998.998 0 017 19.002v-7.004zM0 .992C0 .444.451 0 .99 0h4.02c.546 0 .99.455.99.992v18.016a.996.996 0 01-.99.992H.99a.999.999 0 01-.99-.992V.992z">
            </path>
          </svg>
          <span>Project</span>
        <% end %>
        <%= link_to new_pen_path,class: 'create-link' do %>
          <svg viewBox="0 0 20 20" width="20" height="20">
            <rect y="10.36" width="9.64" height="9.64" rx="1" ry="1"></rect>
            <rect x="10.36" y="10.36" width="9.64" height="9.64" rx="1" ry="1"></rect>
            <rect width="9.64" height="9.64" rx="1" ry="1"></rect>
            <rect x="10.36" width="9.64" height="9.64" rx="1" ry="1"></rect>
          </svg>
          <span>Collection</span>
        <% end %>
      </div>
      <div class="sidebar-item sidebar-item-line">
        <%= link_to 'Your work' , pens_path %>
        <%= link_to 'Activity' , pens_path %>
        <%= link_to 'Assets' , pens_path %>
        <%= link_to 'Pinned Items' , pens_path %>
      </div>
      <div class="sidebar-item sidebar-item-line">
        <%= link_to 'Following' , pens_path %>
        <%= link_to 'Trending' , pens_path %>
        <%= link_to 'Challenges' , pens_path %>
        <%= link_to 'Spark' , pens_path %>
      </div>
      <div class="sidebar-item sidebar-item-line">
        <%= link_to products_path,class:'codepain-link' do%>
          <p>CodePain</p>
          <span class="logo-pro">pro</span>
          <% end %>
      </div>
      <figure class="sidebar-advertise">
        <div class="advertise-img">
          <img src="/images/banner-5x.jpg" title="5X宣傳廣告">
        </div>
        <figcaption>5X宣傳廣告</figcaption>
      </figure>
    </div>
  <% else %>
    <div class="sidebar-content-logout">
      <div class="sidebar-item">
        <p class="sidebar-title">Try Our Online Editor</p>
        <!-- 改網址 -->
        <%= link_to new_pen_path,class: 'start-code' do %>
          <span>Start Coding</span>
        <% end %>
      </div>
      <div class="sidebar-item sidebar-item-line2">
        <%= link_to 'Trending' , '#' %>
        <%= link_to 'Challenges' , '#' %>
        <%= link_to 'Spark' , '#' %>
      </div>
      <div class="sidebar-item sidebar-item-line2">
        <%= link_to products_path,class:'codepain-link' do%>
          <p>CodePain</p>
          <span class="logo-pro">pro</span>
        <% end %>
      </div>
      <figure class="sidebar-advertise">
        <div class="advertise-img">
          <img src="/images/banner-5x.jpg" title="5X宣傳廣告">
        </div>
        <figcaption>5X宣傳廣告</figcaption>
      </figure>
    </div>
  <% end %>
</header>