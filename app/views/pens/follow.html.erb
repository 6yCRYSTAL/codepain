<div class="feat-page-title">
  <%= link_to 'Following', follow_path, class: 'big-title active' %>
  <%= link_to 'Trending', trending_path, class: 'big-title' %>
  <%= link_to 'Your Work', pens_path, class: 'big-title' %>
</div>
<div class="pen-items-wrap">
  <% @pens.each do |pen| %>
      <article class="col">
        <div class="pen-item">
          <header class="pen-header">
            <%= link_to pen.title,
                        edit_pen_path(username: pen.user.username, random_url: pen.random_url) %>
            <div class="points-follow-wrap points-content-top"
                 data-url="<%= pen.random_url %>"
                 data-controller="follow"
                 data-follow-username-value="<%= pen.user.username %>"
                 data-follow-random-value="<%= pen.random_url %>">
            </div>
          </header>
          <div class="pen-pro"><span><%= pen.user.username %></span><%= pro_logo(pen) %></div>
          <div class="pen-img">
              <iframe id="grid-iframe"
                    sandbox="allow-scripts"
                    loading="lazy"
                    scrolling="no"
                    frameBorder="0"
                    srcDoc="<html>
                            <style><%= pen.css %></style>
                            <% pen.resources.each do |cdn| %>
                              <% if cdn.category === 'css' %>
                                <link rel='stylesheet' href='<%= cdn.url %>'></link>
                              <% end %>
                            <% end %>
                            <body><%= pen.html %> </body>
                            <script type='text/javascript'><%= pen.js %></script>
                            <% pen.resources.each do | cdn | %>
                              <% if cdn.category === 'js' %>
                                <script type='text/javascript' href='<%= cdn.url %>'></script>
                              <% end %>
                            <% end %>
                            </html>" %>>
            </iframe>
              <a class="cover-link" href="<%= edit_pen_path(pen, username: pen.user.username) %>"></a>
              <a class="prompt-link">
                <button>
                  <i class="fas fa-expand-arrows-alt"></i>
                </button>
              </a>
          </div>
          <footer class="pen-footer" data-controller="stats"
                                     data-stats-target="yourWork"
                                     data-stats-loved-class="text-red-600"
                                     data-stats-random-value="<%= pen.random_url %>">
            <button class="pen-footer-style" data-btn="love" data-action="click->stats#toggleHeart">
              <i class="fas fa-heart cursor-pointer stroke-current"
                 data-stats-target="heart"></i>
              <span data-stats-target="heartListsCount"></span>
            </button>
            <a href="#" class="pen-footer-style" data-btn="comments">
              <i class="fas fa-comment"></i>
              <span><%= pen.comments.size %></span>
            </a>
            <a href="#" class="pen-footer-style" data-btn="views">
              <i class="fas fa-eye"></i>
              <span><%= pen.edit_view_count %></span>
            </a>
          </footer>
        </div>
      </article>
  <% end %>
</div>
<div class="next-prev-btn">
  <%= page_buttons(@pens) %>
</div>