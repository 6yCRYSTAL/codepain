<div>
  <a href="">Following</a>
  <a href="">Trending</a>
  <a href="">Your Work</a>
</div>

<div>
  <a href="">Pens</a>
  <a href="">Projects</a>
  <a href="">Collections</a>
  <a href="">Deleted</a>
</div>

<input type="button" value="Search">

<div>
  View
  <select>
    <option value="all">All</option>
    <option value="not-fork">All My Pens (No Forks)</option>
    <option value="public">Public</option>
    <option value="private">Private</option>
    <option value="template">Template</option>
    <option value="fork">Fork</option>
  </select>
</div>

<div>
  <button>Grid</button>
  <button>List</button>
</div>

<div>
  SORT BY
  <select>
    <option value="ID">Date Created</option>
    <option value="UPDATED_AT">Date Updated</option>
    <option value="POPULARITY">Popularity</option>
  </select>
</div>

<div>
  SORT DIRECTION
  <button>UP</button>
  <button>DOWN</button>
</div>

<div>
  TAG
  <input type="text">
</div>

<div>

  <table>
  <tr>
    <th>Title</th>
    <th>-preview--</th>
    <th>Created</th>
    <th>Last Updated</th>
    <th>Stats</th>
    <th>--menu--</th>
  </tr>
  <% @pens.each do |pen| %>
    <tr>
      <td><%= pen.title %></td>
      <%#= link_to pen.title, pen_path(pen) %> 
      <%# to /:username/pen/:id(.:format)	pens#show%>
      <td>preview btn</td>
      <td><%= pen.created_at.strftime("%b %d, %Y") %></td>
      <td><%= pen.updated_at.strftime("%b %d, %Y") %></td>
      <td> pen.status </td>
      <td> menu btn </td>
    </tr>
  <% end %>
</table>

</div>

<button>NEXT ></button>