<tr scope="col">
  <th class="title-wrap">
    <%= link_to pen.title, edit_pen_path(pen, username: current_user.username) %>
  </th>
  <td class="modal-wrap">
    <%# modal %>
    <button class="modal-btn" id="modal-btn">
      <i class="fas fa-expand-arrows-alt"></i>
    </button>
    <div id="modal" class="modal" data-url="<%= pen.random_url %>">
      <div class="modal-content">
        <a href="#" id="username">
          <%= current_user.username %>
        </a>
          <%= pen.title %>
          <%= pen.html %>
          <%= pen.css %>
          <%= pen.js %>
          <%= render 'comment' , pen: pen, comments: pen.comments, comment: @comment, comments_count: pen.comments_count %>
      </div>
    </div>
  </td>
  <td><%= pen.created_at.to_date.to_formatted_s(:long) %></td>
  <td><%= pen.updated_at.to_date.to_formatted_s(:long) %></td>
  <td class="stats">
    <div class="hearts">
      <i class="fas fa-heart"></i>
      0
    </div>
    <div class="comments">
      <i class="fas fa-comment"></i>
      0
    </div>
    <div class="eye">
      <i class="fas fa-eye"></i>
      <%= pen.edit_view_count %>
    </div>
  </td>
  <td class="more">
    <div class="more-icon">
      <svg viewBox="0 0 29 7" width="28" title="more">
        <circle cx="3.5" cy="3.5" r="3.5"></circle>
        <circle cx="14.5" cy="3.5" r="3.5"></circle>
        <circle cx="25.5" cy="3.5" r="3.5"></circle>
      </svg>
    </div>
  </td>
  <td><%= link_to 'show', pen_path(pen, username:current_user.username)%></td>
</tr>